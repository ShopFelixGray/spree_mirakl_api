<% content_for :page_title do %>
  <%= link_to Spree.t(:mirakl_stores), spree.admin_mirakl_stores_url %> /
  <%= @mirakl_store.name %>
<% end %>

<%= render :partial => 'spree/admin/shared/error_messages', :locals => { :target => @mirakl_store } %>

<%= form_for [:admin, @mirakl_store] do |f| %>
  <div class="panel panel-default">
    <div class="panel-body">
      <%= render :partial => 'form', :locals => { :f => f } %>
    </div>

    <div class="panel-footer text-center">
      <%= render :partial => 'spree/admin/shared/edit_resource_links' %>
    </div>
  </div>
<% end %>